#!/usr/bin/env bash

set -euo pipefail

scriptdir=$(cd "$(dirname "$0")" && pwd)

# shellcheck source=./common.sh
. "$scriptdir/common.sh"

process_arguments "$@"
shift $((OPTIND - 1))

identifier=$1
shift

if [ -n "$directory" ]; then
    mkdir -p "$directory"
    cd "$directory"
fi

if [ -e "$identifier/.done" ] && [ -z "$update" ]; then
    exit 0
fi

ia download "$identifier" "$@"

touch "$identifier/.done"
